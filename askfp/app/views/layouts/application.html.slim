doctype html
html
  head
    title Askfp
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  body
    = render partial: 'shared/header'
    - if flash[:info]
      .msg.msg-info
        div
          = flash[:info]
    - if flash[:notice]
      .msg.msg-info
        div
          = flash[:notice]
    - if flash[:warning]
      .msg.msg-alert
        div
          = flash[:warning]
    - if flash[:alert]
      .msg.msg-error
        div
          = flash[:alert]
    = yield
    = render partial: 'shared/fotter'